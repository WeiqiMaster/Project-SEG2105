<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdministrationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="Your Availability:" />

    <Button
        android:id="@+id/btnAddAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Add a Availability" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Click the row to modify the Availability." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Month/Day"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:layout_weight="30"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Time Interval"
            android:gravity="center"
            android:layout_weight="50"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <!--        //android:layout_alignParentTop="true"-->
    <!--        //android:layout_alignParentStart="true"-->


</LinearLayout>