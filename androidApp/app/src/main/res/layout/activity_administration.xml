<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdministrationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="Add New Service Here:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Service Name:"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textAlignment="textStart"
            android:layout_weight="70"/>

        <EditText
            android:id="@+id/etServiceName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Role of person:"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textAlignment="textStart"
            android:layout_weight="70"/>

        <EditText
            android:id="@+id/etRoleOfPerson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Add Service" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Click the row to modify the service." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Service Name"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:textAlignment="textStart"
            android:layout_weight="30"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Role Of Person"
            android:gravity="center"
            android:layout_weight="50"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
<!--        //android:layout_alignParentTop="true"-->
<!--        //android:layout_alignParentStart="true"-->


</LinearLayout>